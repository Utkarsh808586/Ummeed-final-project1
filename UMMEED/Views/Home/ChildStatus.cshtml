            <table class="table table-striped">
                <tr>
                    <th>
                        Child Id 
                    </th>
                    <th>
                        Child Name
                    </th>
                    <th>
                         Paid Amount
                    </th>
                    <th>
                        Child key
                    </th>
                </tr>
                @{
                    
                        <tr>
                            <td>
                                @ch.Chid
                            </td>
                            <td>
                                @ch.Chname
                            </td>
                            <td>
                                @ch.Payment
                            </td>
                            <td>
                                @ch.Chkey
                            </td>
                        </tr>
                       
                    
                }
            </table>
              
         </form>
         
